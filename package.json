{
  "name": "scrip",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "UNLICENSED",
  "author": "Stephen Sorensen <shuoink@gmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:typescript && npm run build:webpack",
    "build:typescript": "tsc",
    "build:webpack": "NODE_ENV=production webpack --config=src/webpack.config.js --json > stats.json",
    "depcheck": "depcheck --ignores=\",@commitlint/*,@types/*,prettier,pretty-quick,sort-package-json,typescript,@fullhuman/postcss-purgecss,autoprefixer,tailwindcss,postcss-import,webpack-cli\"",
    "dev": "NODE_ENV=development BABEL_ENV=development PORT=3000 ts-node src/index.server.dev.tsx | pino-pretty",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "NODE_ENV=production node build/index.server.js",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run depcheck && npm run test && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,htm,html,css}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json",
      "prettier --write"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "loose": true,
          "useBuiltIns": "usage",
          "corejs": 3,
          "shippedProposals": true,
          "include": [
            "@babel/plugin-proposal-nullish-coalescing-operator",
            "@babel/plugin-proposal-optional-chaining"
          ]
        }
      ],
      "@babel/preset-react"
    ]
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 edge versions",
    "last 2 firefox versions"
  ],
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "lf",
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@spudly"
  },
  "eslintIgnore": [
    "node_modules",
    "build",
    "public"
  ],
  "dependencies": {
    "@reach/auto-id": "^0.10.5",
    "@types/jest": "^26.0.13",
    "autoprefixer": "^9.8.5",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "express": "^5.0.0-alpha.8",
    "express-session": "^1.17.1",
    "helmet": "^3.23.3",
    "mongodb": "^3.5.3",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.3",
    "pino": "^6.4.0",
    "pino-http": "^5.2.0",
    "pino-pretty": "^4.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.9.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.1",
    "@spudly/eslint-config": "^6.0.0",
    "@types/autoprefixer": "^9.7.2",
    "@types/classnames": "^2.2.9",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "0.0.47",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^14.0.23",
    "@types/node-fetch": "^2.5.7",
    "@types/passport": "^1.0.4",
    "@types/passport-auth0": "^1.0.4",
    "@types/pino": "^6.3.0",
    "@types/pino-http": "^5.0.3",
    "@types/postcss-import": "^12.0.0",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.5",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.4",
    "@types/uuid": "^8.0.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-dev-middleware": "^3.7.0",
    "@types/webpack-hot-middleware": "^2.25.3",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "depcheck": "^1.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.1.3",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react-refresh": "^0.8.3",
    "sort-package-json": "^1.41.0",
    "style-loader": "^1.2.0",
    "tailwindcss": "^1.6.2",
    "ts-node": "^8.9.0",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
