{
  "name": "@spudly/scripture.study",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "UNLICENSED",
  "author": "Stephen Sorensen <shuoink@gmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "npm run codegen && npm run build:server && npm run build:client",
    "build:client": "rm stats.json; rm -rf public/js; rm -rf public/css; NODE_ENV=production webpack --config=build/webpack.config.js --json > stats.json",
    "build:server": "rm -rf build && tsc",
    "codegen": "npm run codegen:meta",
    "codegen:meta": "ts-node scripts/meta.ts | prettier --stdin-filepath src/meta.ts > src/meta.ts",
    "depcheck": "depcheck --ignores=\",@commitlint/*,@types/*,prettier,pretty-quick,sort-package-json,typescript,autoprefixer,tailwindcss,postcss-import,webpack-cli,pg,pg-hstore,*-loader,babel-*\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "NODE_ENV=production node build/index.server.js",
    "start:dev": "NODE_ENV=development npm run start:dev:server | pino-pretty",
    "start:dev:server": "npm run codegen && ts-node src/index.server.dev.tsx",
    "test": "rm -rf .nyc-output && rm -rf coverage && npm run test:unit && npm run test:integration",
    "test:integration": "start-server-and-test test:integration:start http://localhost:3000 test:integration:run",
    "test:integration:run": "cypress run",
    "test:integration:start": "NODE_ENV=test nyc npm run start:dev:server",
    "test:unit": "jest --coverage --forceExit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run depcheck && lint-staged && npm run build && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,htm,html,css}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json",
      "prettier --write"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "loose": true,
          "useBuiltIns": "usage",
          "corejs": 3,
          "shippedProposals": true,
          "include": [
            "@babel/plugin-proposal-nullish-coalescing-operator",
            "@babel/plugin-proposal-optional-chaining"
          ]
        }
      ],
      "@babel/preset-react"
    ]
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 edge versions",
    "last 2 firefox versions",
    "last 2 safari versions"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "endOfLine": "lf",
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@spudly"
  },
  "eslintIgnore": [
    "node_modules",
    "build",
    "public"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cypress/",
      "/build/"
    ]
  },
  "nyc": {
    "all": true,
    "cache": false,
    "exclude": [
      "**/*.test.*",
      "**/*.stories.*"
    ],
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.{ts,tsx}"
    ],
    "reporter": [
      "text",
      "json",
      "lcov"
    ]
  },
  "dependencies": {
    "@reach/auto-id": "^0.11.2",
    "@spudly/pushpop": "^2.1.3",
    "body-parser": "^1.19.0",
    "bowser": "^2.11.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "express": "^5.0.0-alpha.8",
    "express-session": "^1.17.1",
    "helmet": "^4.1.1",
    "history": "^4.9.0",
    "node-fetch": "^2.6.1",
    "pg": "^8.4.2",
    "pg-hstore": "^2.3.3",
    "pino": "^6.7.0",
    "pino-http": "^5.3.0",
    "pino-pretty": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^3.11.0",
    "react-query": "^2.26.2",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "sequelize": "^6.3.5",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@cypress/code-coverage": "^3.8.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.2",
    "@spudly/eslint-config": "^8.0.1",
    "@testing-library/cypress": "^7.0.1",
    "@types/autoprefixer": "^9.7.2",
    "@types/classnames": "^2.2.11",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cssnano": "^4.0.0",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/google.analytics": "0.0.40",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.15",
    "@types/mongodb": "^3.5.32",
    "@types/node": "^14.14.6",
    "@types/node-fetch": "^2.5.7",
    "@types/passport": "^1.0.4",
    "@types/passport-auth0": "^1.0.4",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-google-oauth20": "^2.0.4",
    "@types/pino": "^6.3.3",
    "@types/pino-http": "^5.0.5",
    "@types/postcss-import": "^12.0.0",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.0",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "browserslist": "^4.14.6",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "cypress": "^5.5.0",
    "depcheck": "^1.2.0",
    "eslint": "^7.12.1",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "mini-css-extract-plugin": "^1.2.1",
    "nyc": "^15.1.0",
    "postcss": "^8.1.4",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.0.4",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "react-refresh": "^0.9.0",
    "sort-package-json": "^1.46.1",
    "start-server-and-test": "^1.11.5",
    "style-loader": "^2.0.0",
    "tailwindcss": "^1.9.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "webpack-dev-middleware": "^4.0.0",
    "webpack-hot-middleware": "^2.25.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
