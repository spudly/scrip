{
  "name": "scrip",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "UNLICENSED",
  "author": "Stephen Sorensen <shuoink@gmail.com>",
  "main": "index.js",
  "scripts": {
    "apollo-codegen": "apollo client:codegen types -c apollo.config.client.js --target=typescript --globalTypesFile=graphql/types/globalTypes.ts",
    "build": "npm run apollo-codegen && next build",
    "depcheck": "depcheck --ignore-dirs=.next --ignores=\"@babel/*,@commitlint/*,@types/*,prettier,pretty-quick,sort-package-json,typescript,@fullhuman/postcss-purgecss,autoprefixer,tailwindcss,postcss-import,graphql-tag\"",
    "dev": "next",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "next start",
    "test": "echo \"no tests yet\"; exit 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run depcheck && npm run test && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,htm,html,css}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "lf",
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@spudly"
  },
  "eslintIgnore": [
    "node_modules",
    "build"
  ],
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "apollo-boost": "^0.4.7",
    "apollo-server": "^2.10.1",
    "apollo-server-micro": "^2.10.1",
    "autoprefixer": "^9.7.4",
    "classnames": "^2.2.6",
    "graphql": "^14.6.0",
    "graphql-import-node": "0.0.4",
    "graphql-tag": "^2.10.3",
    "isomorphic-unfetch": "^3.0.0",
    "mongodb": "^3.5.3",
    "next": "^9.3.4",
    "postcss-import": "^12.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-icons": "^3.9.0",
    "tailwindcss": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@spudly/eslint-config": "^6.0.0",
    "@types/classnames": "^2.2.9",
    "@types/graphql": "^14.5.0",
    "@types/mongodb": "^3.3.16",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "apollo": "^2.25.0",
    "depcheck": "^0.9.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "sort-package-json": "^1.41.0",
    "typescript": "^3.7.5"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
