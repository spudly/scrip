{
  "name": "scrip",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "UNLICENSED",
  "author": "Stephen Sorensen <shuoink@gmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --json > stats.json",
    "depcheck": "depcheck --ignores=\",@commitlint/*,@types/*,prettier,pretty-quick,sort-package-json,typescript,@fullhuman/postcss-purgecss,autoprefixer,tailwindcss,postcss-import,webpack-cli\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "NODE_ENV=development PORT=8080 ts-node index.server.dev.tsx",
    "test": "echo \"no tests yet\"; exit 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run depcheck && npm run test && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,htm,html,css}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json",
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "lf",
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@spudly"
  },
  "eslintIgnore": [
    "node_modules",
    "build",
    "public"
  ],
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "autoprefixer": "^9.7.4",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "express": "^5.0.0-alpha.8",
    "mongodb": "^3.5.3",
    "postcss-import": "^12.0.1",
    "react": "0.0.0-experimental-e5d06e34b",
    "react-dom": "0.0.0-experimental-e5d06e34b",
    "react-icons": "^3.9.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "tailwindcss": "^1.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@now/node": "^1.5.1",
    "@spudly/eslint-config": "^6.0.0",
    "@types/classnames": "^2.2.9",
    "@types/express": "^4.17.6",
    "@types/mongodb": "^3.3.16",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-router": "^5.1.5",
    "@types/react-router-dom": "^5.1.4",
    "@types/webpack": "^4.41.12",
    "@types/webpack-dev-middleware": "^3.7.0",
    "css-loader": "^3.5.3",
    "depcheck": "^0.9.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "sort-package-json": "^1.41.0",
    "style-loader": "^1.2.0",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.0",
    "typescript": "^3.7.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
