{
  "name": "@spudly/scripture.study",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "UNLICENSED",
  "author": "Stephen Sorensen <shuoink@gmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:client": "rm stats.json && rm public/index.client.js && NODE_ENV=production webpack --config=build/webpack.config.js --json > stats.json",
    "build:server": "rm -rf build && tsc",
    "coverage:clean": "rm -rf .nyc-output && rm -rf .coverage",
    "depcheck": "depcheck --ignores=\",@commitlint/*,@types/*,prettier,pretty-quick,sort-package-json,typescript,@fullhuman/postcss-purgecss,autoprefixer,tailwindcss,postcss-import,webpack-cli,pg,pg-hstore,*-loader\"",
    "dev": "NODE_ENV=development BABEL_ENV=development PORT=3000 ts-node src/index.server.dev.tsx | pino-pretty",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "NODE_ENV=production node build/index.server.js",
    "test": "npm run coverage:clean && npm run test:unit && npm run test:integration",
    "test:integration": "start-server-and-test test:integration:start http://localhost:3000 test:integration:run",
    "test:integration:instrument": "nyc instrument src .src-instrumented && cp src/index.css .src-instrumented/",
    "test:integration:run": "cypress run",
    "test:integration:start": "npm run test:integration:instrument && NODE_ENV=test ts-node .src-instrumented/index.server.dev.tsx",
    "test:unit": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run depcheck && lint-staged && npm run build && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,htm,html,css}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json",
      "prettier --write"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "loose": true,
          "useBuiltIns": "usage",
          "corejs": 3,
          "shippedProposals": true,
          "include": [
            "@babel/plugin-proposal-nullish-coalescing-operator",
            "@babel/plugin-proposal-optional-chaining"
          ]
        }
      ],
      "@babel/preset-react"
    ]
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 edge versions",
    "last 2 firefox versions"
  ],
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "lf",
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "mocha": true
    },
    "extends": "@spudly",
    "overrides": [
      {
        "files": [
          "cypress/**/*.{spec,test}.*"
        ],
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ],
    "globals": {
      "cy": "readonly"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "build",
    "public"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": ".coverage/unit",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cypress/",
      "/build/"
    ]
  },
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.test.*",
      "**/*.stories.*"
    ],
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.{ts,tsx}"
    ],
    "report-dir": ".coverage/integration",
    "reporter": [
      "text",
      "json",
      "lcov"
    ]
  },
  "dependencies": {
    "@reach/auto-id": "^0.10.5",
    "@spudly/pushpop": "^2.1.3",
    "@types/jest": "^26.0.13",
    "autoprefixer": "^9.8.5",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "express": "^5.0.0-alpha.8",
    "express-session": "^1.17.1",
    "helmet": "^3.23.3",
    "node-fetch": "^2.6.1",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "pino": "^6.4.0",
    "pino-http": "^5.2.0",
    "pino-pretty": "^4.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-query": "^2.21.0",
    "react-query-devtools": "^2.5.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "sequelize": "^6.3.5",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@cypress/code-coverage": "^3.8.2",
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.1",
    "@spudly/eslint-config": "^6.0.0",
    "@testing-library/cypress": "^7.0.1",
    "@types/autoprefixer": "^9.7.2",
    "@types/classnames": "^2.2.9",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "0.0.47",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^14.0.23",
    "@types/node-fetch": "^2.5.7",
    "@types/passport": "^1.0.4",
    "@types/passport-auth0": "^1.0.4",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-google-oauth20": "^2.0.4",
    "@types/pino": "^6.3.0",
    "@types/pino-http": "^5.0.3",
    "@types/postcss-import": "^12.0.0",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.5",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.4",
    "@types/uuid": "^8.0.0",
    "@types/validator": "^13.1.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-dev-middleware": "^3.7.0",
    "@types/webpack-hot-middleware": "^2.25.3",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "cypress": "^5.4.0",
    "depcheck": "^1.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.1.3",
    "nyc": "^15.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react-refresh": "^0.8.3",
    "sort-package-json": "^1.41.0",
    "start-server-and-test": "^1.11.5",
    "style-loader": "^1.2.0",
    "tailwindcss": "^1.6.2",
    "ts-node": "^8.9.0",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
